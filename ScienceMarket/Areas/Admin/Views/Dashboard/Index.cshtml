@inject ScienceMarketDbContext dbContext
@inject Microsoft.AspNetCore.Identity.UserManager<User> userManager
@{
    ViewData["Title"] = "Dashboard";
    var members = userManager.Users.Count(p => p.UserRoles.Any(q => q.Role.Name == "Members"));
    var products = dbContext.Products.Count(p => p.IsEnabled);
    var sales = dbContext.Orders.Where(p => p.Status != OrderStatus.Cancelled).Include(p => p.Items).Sum(p => p.Items.Sum(q => q.Quantity * q.Price));
    var orders = dbContext.Orders.Count(p => p.Status != OrderStatus.Cancelled);

    var lastOrders = dbContext.Orders.Include(p => p.User).Include(p => p.Items).Where(p => p.Status == OrderStatus.New).OrderBy(p => p.Date).Take(10).ToList();
}


<div class="row g-3">
    <div class="col-6 col-lg-3">
        <div class="card p-3">
            <div class="small text-secondary">Members</div>
            <div class="fs-3 fw-bold">@members</div>
            <div class="small text-secondary"></div>
        </div>
    </div>
    <div class="col-6 col-lg-3">
        <div class="card p-3">
            <div class="small text-secondary">Products</div>
            <div class="fs-3 fw-bold">@products</div>
            <div class="small text-secondary"></div>
        </div>
    </div>
    <div class="col-6 col-lg-3">
        <div class="card p-3">
            <div class="small text-secondary">Total Sales</div>
            <div class="fs-3 fw-bold">@sales.ToString("n0")</div>
            <div class="small text-secondary"></div>
        </div>
    </div>
    <div class="col-6 col-lg-3">
        <div class="card p-3">
            <div class="small text-secondary">Total order</div>
            <div class="fs-3 fw-bold">@orders</div>
            
        </div>
    </div>
</div>

<div class="row g-3 mt-2">
    <div class="col-lg-8">
        <div class="card p-3">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h6 class="m-0">Last Orders</h6>
             
            </div>
            <div class="table-responsive">
                <table class="table table-dark table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>User Name</th>
                            <th>E-mail</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in lastOrders)
                        {
                            <tr>
                                <td>@order.Date.ToShortDateString()</td>
                                <td>@order.User.GivenName</td>
                                <td>@order.User.Email</td>
                                <td>@order.GrandTotal.ToString("n0")</td>
                                <td><span class="badge text-bg-success">@order.Status</span></td>
                                <td><a class="btn btn-sm btn-warning" asp-area="Admin" asp-controller="Orders" asp-action="Detail" asp-route-id="@order.Id">Detail</a></td>
                            </tr>
                        }
                       
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card p-3">
            <h6 class="mb-2">Quick Actions</h6>
            <div class="d-grid gap-2">
                <a class="btn btn-warning" asp-controller="Categories" asp-action="Create">Add New Category</a>
                <a class="btn btn-outline-light" asp-controller="Catalogs" asp-action="Create">Add New Catalog</a>
                <a class="btn btn-outline-light" asp-controller="Brands" asp-action="Create">Add New Brand</a>
                <a class="btn btn-outline-light" asp-controller="Products" asp-action="Create">Add New Product</a>
            </div>
        </div>
    </div>
</div>