

<!DOCTYPE html>
<html lang="tr">
<head>
    <title>@ViewData["Title"] - Admin</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
    :root { --sidebar-w: 260px; }
    body { min-height: 100vh; }
    .admin-wrap { display:flex; min-height:100vh; }
    .sidebar { width:var(--sidebar-w); background:#111827; color:#e5e7eb; }
    .sidebar .brand{ padding:16px 20px; font-weight:700; border-bottom:1px solid #1f2937; }
    .sidebar a{ color:#e5e7eb; text-decoration:none; display:block; padding:12px 20px; border-left:4px solid transparent; }
    .sidebar a:hover,.sidebar a.active{ background:#1f2937; border-left-color:#f59e0b; }
    .content{ flex:1; background:#0b1020; color:#e5e7eb; }
    .topbar{ background:#0f172a; border-bottom:1px solid #1f2937; }
    .card{ background:#111827; color:#e5e7eb; border:1px solid #1f2937; }
    .table thead th{ border-bottom-color:#1f2937; }
    .table td,.table th{ border-top-color:#1f2937 !important; }
    @@media (max-width: 991.98px){
      .sidebar{ position:fixed; left:-100%; top:0; bottom:0; z-index:1040; transition:left .2s; }
      .sidebar.show{ left:0; }
    }
    </style>
</head>
<body>

    <div class="admin-wrap">
        <nav id="sidebar" class="sidebar">
            <div class="brand">ScienceMarket • Admin</div>
            <div class="p-2">
                <a class="active" href="#">📊 Gösterge Paneli</a>
                <a href="#">📦 Ürünler</a>
                <a href="#">🧾 Siparişler</a>
                <a href="#">👤 Kullanıcılar</a>
                <a href="#">🗂️ Kategoriler</a>
                <a href="#">📈 Raporlar</a>
                <a href="#">⚙️ Ayarlar</a>
                <hr class="border-secondary opacity-25">
                <a href="#">↩️ Siteye Dön</a>
            </div>
        </nav>

        <div class="content w-100">
            <div class="topbar">
                <div class="container-fluid py-2 d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-2">
                        <button class="btn btn-outline-light d-lg-none" id="sidebarToggle">☰</button>
                        <h6 class="m-0 fw-bold">Gösterge Paneli</h6>
                    </div>
                    <form class="d-none d-md-flex" role="search">
                        <input class="form-control form-control-sm bg-dark text-light border-0" placeholder="Ara..." />
                    </form>
                </div>
            </div>

            <main class="container-fluid py-4">
                <div class="row g-3">
                    <div class="col-6 col-lg-3">
                        <div class="card p-3">
                            <div class="small text-secondary">Bugünkü Satış</div>
                            <div class="fs-3 fw-bold">32</div>
                            <div class="small text-secondary">sipariş</div>
                        </div>
                    </div>
                    <div class="col-6 col-lg-3">
                        <div class="card p-3">
                            <div class="small text-secondary">Toplam Sipariş</div>
                            <div class="fs-3 fw-bold">1280</div>
                            <div class="small text-secondary">adet</div>
                        </div>
                    </div>
                    <div class="col-6 col-lg-3">
                        <div class="card p-3">
                            <div class="small text-secondary">Aktif Kullanıcı</div>
                            <div class="fs-3 fw-bold">415</div>
                            <div class="small text-secondary">kullanıcı</div>
                        </div>
                    </div>
                    <div class="col-6 col-lg-3">
                        <div class="card p-3">
                            <div class="small text-secondary">Düşük Stok</div>
                            <div class="fs-3 fw-bold">9</div>
                            <div class="small text-secondary">ürün</div>
                        </div>
                    </div>
                </div>

                <div class="row g-3 mt-2">
                    <div class="col-lg-8">
                        <div class="card p-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="m-0">Son Siparişler</h6>
                                <a href="#" class="btn btn-sm btn-outline-light">Tümünü Gör</a>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-dark table-hover align-middle mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Müşteri</th>
                                            <th>Tarih</th>
                                            <th>Tutar</th>
                                            <th>Durum</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>ORD-2025-001</td>
                                            <td>Ali Yılmaz</td>
                                            <td>03.11.2025 10:20</td>
                                            <td>1.230 ₺</td>
                                            <td><span class="badge text-bg-success">Tamamlandı</span></td>
                                            <td><a class="btn btn-sm btn-warning" href="#">Detay</a></td>
                                        </tr>
                                        <tr>
                                            <td>ORD-2025-002</td>
                                            <td>Ayşe Demir</td>
                                            <td>03.11.2025 09:55</td>
                                            <td>980 ₺</td>
                                            <td><span class="badge text-bg-warning">Hazırlanıyor</span></td>
                                            <td><a class="btn btn-sm btn-warning" href="#">Detay</a></td>
                                        </tr>
                                        <tr>
                                            <td>ORD-2025-003</td>
                                            <td>Mehmet Koç</td>
                                            <td>03.11.2025 09:12</td>
                                            <td>2.450 ₺</td>
                                            <td><span class="badge text-bg-info">Kargoda</span></td>
                                            <td><a class="btn btn-sm btn-warning" href="#">Detay</a></td>
                                        </tr>
                                        <tr>
                                            <td>ORD-2025-004</td>
                                            <td>Elif Kaya</td>
                                            <td>03.11.2025 08:47</td>
                                            <td>560 ₺</td>
                                            <td><span class="badge text-bg-danger">İptal</span></td>
                                            <td><a class="btn btn-sm btn-warning" href="#">Detay</a></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="card p-3">
                            <h6 class="mb-2">Hızlı İşlemler</h6>
                            <div class="d-grid gap-2">
                                <a class="btn btn-warning" href="#">Yeni Ürün Ekle</a>
                                <a class="btn btn-outline-light" href="#">Siparişleri Yönet</a>
                                <a class="btn btn-outline-light" href="#">Kullanıcıları Yönet</a>
                            </div>
                        </div>
                        <div class="card p-3 mt-3">
                            <h6 class="mb-2">Sistem Durumu</h6>
                            <ul class="mb-0">
                                <li>Veritabanı: Çevrimiçi</li>
                                <li>İşçi Servis: Çalışıyor</li>
                                <li>Son Yedek: 03.11.2025 05:00</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('sidebarToggle')?.addEventListener('click', () => {
            document.getElementById('sidebar')?.classList.toggle('show');
        });
    </script>
</body>
</html>