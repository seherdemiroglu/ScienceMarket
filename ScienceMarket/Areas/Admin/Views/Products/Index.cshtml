@model List<Product>
@{
    ViewData["Title"] = "Products";
}


<div class="container py-4 bg-dark text-light rounded shadow">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-info mb-0">Products</h3>
        <a asp-controller="Products" asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Add New Product
        </a>
    </div>

    <table class="table table-dark table-hover align-middle">
        <thead class="table-secondary text-dark">
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Aktve</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@Url.Action("Product", "Images", new { area = string.Empty, id = item.Id})" height="60" width="80" onerror="this.error = null; this.src = '/images/noimage.png'" style="object-fit: contain" />
                    </td>
                    <td>@item.Name</td>
                    <td>
                        @if (item.IsEnabled)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Pasif</span>
                        }
                    </td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning mr-2">
                                Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Bu kataloğu silmek istediğinize emin misiniz?');">
                                Delete
                            </a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>