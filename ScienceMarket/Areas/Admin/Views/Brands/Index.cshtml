
@{
    ViewData["Title"] = "Markalar";
}
@model List<Brand>

<div class="container py-4 bg-dark text-light rounded shadow">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-info mb-0">Markalar</h3>
        <a asp-controller="Brands" asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Yeni Marka Ekle
        </a>
    </div>

    <table class="table table-dark table-hover align-middle">
        <thead class="table-secondary text-dark">
            <tr>
                <th>Logo</th>
                <th>Ad</th>
                <th>Aktif</th>



                <th class="text-center">İşlemler</th>
            </tr>
        </thead>
        <tbody>


            @if (Model != null && Model.Any())
            {

                foreach (var item in Model)
                {
                    <tr>
                        <td><img src="@Url.Action("Brand","Images",new { area=string.Empty, id=item.Id })" height="90" width="90" onerror="this.error = null; this.src='/images/noimage.png'" style="object-fit:contain" /></td>
                        <td>@item.Name</td>
                        <td>
                            @if (item.IsEnabled)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Pasif</span>
                            }
                        </td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-controller="Brands" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning mr-2">Düzenle</a>
                                @*program.cs deki ""pattern: "{area:exists}/{controller=Dashboard}/{action=Index}/{id?}");"" rotadaki id kısmına gönderdiğimiz id eklenecek*@
                                <a asp-controller="Brands" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Bu kataloğu silmek istediğinize emin misiniz?');">Sil</a>
                            </div>
                        </td>
                    </tr>

                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">Hiç katalog bulunamadı.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

