@model IEnumerable<Order>

@{
}
<div class="row g-3 mt-2">
    <div class="col-lg-8">
        <div class="card p-3">
            <div class="d-flex justify-content-between align-items-center mb-2">
               
             
            </div>
            <div class="table-responsive">
                <table class="table table-dark table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>User Name</th>
                            <th>E-mail</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.Date.ToShortDateString()</td>
                                <td>@order.User.GivenName</td>
                                <td>@order.User.Email</td>
                                <td>@order.GrandTotal.ToString("n0")</td>
                                <td><span class="badge text-bg-success">@order.Status</span></td>
                                <td><a class="btn btn-sm btn-warning" asp-area="admin" asp-controller="Orders" asp-action="Detail" asp-route-id="@order.Id">Detail</a></td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>