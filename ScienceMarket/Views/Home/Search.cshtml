@model List<Product>

@{
    ViewData["Title"] = "Search Results";
}

<h2 class="mb-4">Search Results</h2>

<div class="container mt-4">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm product-card">

                    <img src="@Url.Action("Product", "Images", new { id = product.Id })" class="card-img-top" />

                    <div class="card-body d-flex flex-column">

                        <h5 class="card-title text-truncate">@product.Name</h5>

                        <p class="card-text mb-1">
                            <strong>@product.Brand</strong>
                        </p>

                        <p class="card-text text-success font-weight-bold">
                            @product.Price.ToString("C0", CultureInfo.CreateSpecificCulture("tr-TR"))
                        </p>

                        <div class="mt-auto d-flex justify-content-end gap-2">

                            <a class="btn btn-outline-info"
                               asp-controller="Home"
                               asp-action="ProductDetail"
                               asp-route-id="@product.Id">
                                Detail
                            </a>

                            <a class="btn btn-primary add-to-cart-btn"
                               asp-controller="Account"
                               asp-action="AddToCart"
                               asp-route-id="@product.Id">
                                Add to Cart
                            </a>

                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>
