

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - ScienceMarket</title>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body class="d-flex flex-column min-vh-100">

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <!-- Sol Logo -->
            <a class="navbar-brand fw-bold" href="/">ScienceMarket</a>

            <!-- Hamburger butonu -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Menüyü Aç/Kapat">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menü içerik -->
            <div class="collapse navbar-collapse" id="navbarMain">
                <!-- Sol menü -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link active" href="/">Ana Sayfa</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Products">Ürünler</a></li>
                    <li class="nav-item"><a class="nav-link" href="/About">Hakkımızda</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Contact">İletişim</a></li>
                </ul>

                <!-- Sağ taraf -->
                <div class="d-flex">
                    <a class="btn btn-outline-light me-2" asp-action="Login" asp-controller="Account">Giriş Yap</a>
                    <a class="btn btn-warning" asp-action="Register" asp-controller="Account">Kayıt Ol</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- ANA İÇERİK -->
    <main class="flex-grow-1">
        <div class="container mt-4">
            @RenderBody()
            
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="bg-dark text-light mt-auto py-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    <span>&copy; 2025 <strong>ScienceMarket</strong> — Tüm hakları saklıdır.</span>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a href="/Privacy" class="text-decoration-none text-light me-3">Gizlilik Politikası</a>
                    <a href="/Terms" class="text-decoration-none text-light">Kullanım Koşulları</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>