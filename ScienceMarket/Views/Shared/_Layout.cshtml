@inject ScienceMarketDbContext dbContext
@{ 
    var catalogs = dbContext.Catalogs.Where(p => p.IsEnabled && p.Products.Any(q => q.IsEnabled)).OrderBy(p => p.Name).ToList();
    var categories = dbContext.Categories.Where(p => p.IsEnabled && p.Products.Any(q => q.IsEnabled)).OrderBy(p => p.Name).ToList();

    var brands = dbContext.Brands.Where(p => p.IsEnabled && p.Products.Any(q => q.IsEnabled)).OrderBy(p => p.Name).ToList();
}


<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - ScienceMarket</title>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body class="d-flex flex-column min-vh-100">

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <!-- Sol Logo -->
            <a class="navbar-brand fw-bold" href="/">ScienceMarket</a>

            <!-- Hamburger butonu -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Menüyü Aç/Kapat">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menü içerik -->
            <div class="collapse navbar-collapse" id="navbarMain">
                <!-- Sol menü -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link active" asp-controller="Home" asp-action="Index">HOME</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            CATEGORIES
                        </a>

                        <ul class="dropdown-menu">
                            @foreach (var category in categories)
                            {
                                <li>
                                    <a class="dropdown-item"
                                       asp-route="Category"
                                       asp-route-name="@category.Name.ToSafeUrlString()"
                                       asp-route-id="@category.Id">
                                        @category.Name
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            CATALOGS
                        </a>

                        <ul class="dropdown-menu">
                            @foreach (var catalog in catalogs)
                            {
                                <li>
                                    <a class="dropdown-item"
                                       asp-route="Catalog"
                                       asp-route-name="@catalog.Name.ToSafeUrlString()"
                                       asp-route-id="@catalog.Id">
                                        @catalog.Name
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            Brands
                        </a>

                        <ul class="dropdown-menu">
                            @foreach (var brand in brands)
                            {
                                <li>
                                    <a class="dropdown-item"
                                       asp-route="Brands"
                                       asp-route-name="@brand.Name.ToSafeUrlString()"
                                       asp-route-id="@brand.Id">
                                        @brand.Name
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Brand">Brands</a></li>

                </ul>

                <!-- Sağ taraf -->

                <div class="d-flex">
                    @if (User.Identity.IsAuthenticated)
                    {

                        var userId = Guid.Parse(User.FindFirstValue(ClaimTypes.NameIdentifier)!);
                        var shoppingCartItems = dbContext.ShoppingCartItems.Where(p => p.UserId == userId).Sum(p => p.Quantity);

                        <a class="btn btn-outline-light me-2">@User.FindFirst(ClaimTypes.GivenName)!.Value</a>
                        <a class="btn btn-outline-light me-2 position-relative">
                            Shopping Cart

                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary">
                                @(shoppingCartItems > 99 ? "99+" : shoppingCartItems)
                            </span>
                        </a>
                        
                        <a class="btn btn-outline-light me-2" asp-action="Logout" asp-controller="Account">Çıkış Yap</a>
                    }
                    else
                    {
                        <a class="btn btn-outline-light me-2" asp-action="Login" asp-controller="Account">Giriş Yap</a>
                        <a class="btn btn-warning" asp-action="Register" asp-controller="Account">Kayıt Ol</a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <!-- ANA İÇERİK -->
    <main class="flex-grow-1">
        <div class="container mt-4">
            @RenderBody()

        </div>
    </main>

    <!-- FOOTER -->
    <footer class="bg-dark text-light mt-auto py-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    <span>&copy; 2025 <strong>ScienceMarket</strong> — Tüm hakları saklıdır.</span>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a href="/Privacy" class="text-decoration-none text-light me-3">Gizlilik Politikası</a>
                    <a href="/Terms" class="text-decoration-none text-light">Kullanım Koşulları</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", false)
</body>
</html>