@model SetPasswordViewModel

@{
    ViewData["Title"] = "Şifre Yenileme";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body data-bs-theme="light">
    <div class="container">
        <div class="vh-100 d-flex align-items-center justify-content-center">
            <div class="container my-5">
                <div class="row justify-content-center">
                    <div class="col-md-5">
                        <div class="card shadow-sm">
                            <div class="card-header bg-dark text-white text-center">
                                <h4 class="mb-0">Yeni Parola Belirle</h4>
                            </div>
                            <div class="card-body">
                                <form asp-action="SetPassword" method="post" novalidate>
                                    
                                    <input type="hidden" asp-for="Id" />
                                    <input type="hidden" asp-for="Token" />

                                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                                  
                                    <div class="mb-3">
                                        <label asp-for="Password" class="form-label"></label>
                                        <input asp-for="Password" class="form-control" placeholder="Yeni parolanızı girin" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="PasswordCheck" class="form-label"></label>
                                        <input asp-for="PasswordCheck" class="form-control" placeholder="Yeni parolanızı tekrar girin" />
                                        <span asp-validation-for="PasswordCheck" class="text-danger"></span>
                                    </div>

                                  
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-warning">
                                            Parolayı Güncelle
                                        </button>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer text-center">
                                <small>
                                    Giriş sayfasına dönmek için <a href="/Account/Login" class="text-decoration-none">buraya tıklayın</a>.
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
