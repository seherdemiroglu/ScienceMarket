


@inject ScienceMarketDbContext dbContext

@{
    ViewData["Title"] = "Shopping Cart";

    var userId = Guid.Parse(User.FindFirstValue(ClaimTypes.NameIdentifier)!);
    var items = dbContext.ShoppingCartItems
        .Include(p => p.Product)
        .Where(p => p.UserId == userId)
        .ToList();

    var counter = 0;
}

<div class="container mt-4">

    <h3 class="mb-4">@ViewData["Title"]</h3>

    <div class="row g-4">

      
        <div class="col-12 col-lg-9">

            <div class="table-responsive">
                <table class="table align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Product</th>
                            <th class="text-end">Price</th>
                            <th class="text-center">Qty</th>
                            <th class="text-end">Amount</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in items)
                        {
                            <tr>
                                <td>@(++counter)</td>

                                <td>
                                    <div class="d-flex align-items-center gap-3">
                                        <a asp-route="Product"
                                           asp-route-id="@item.Product.Id"
                                           asp-route-name="@item.Product.Name.ToSafeUrlString()">
                                            <img src="@Url.Action("Product", "Images", new { id = item.Product!.Id })"
                                                 class="rounded border"
                                                 style="height: 70px; width: 90px; object-fit: contain;" />
                                        </a>

                                        <div>
                                            <div class="fw-bold">@item.Product.Name</div>
                                            <div class="text-muted small">@item.Product.Category?.Name</div>
                                        </div>
                                    </div>
                                </td>

                                <td class="text-end">
                                    @item.Product.Price.ToString("C0", CultureInfo.CreateSpecificCulture("tr-TR"))
                                </td>

                                <td class="text-center">
                                    <div class="input-group input-group-sm justify-content-center" style="width: 120px;">
                                        <a asp-action="DecreaseQuantity" asp-route-id="@item.Id" class="btn btn-outline-secondary">−</a>

                                        <input class="form-control text-center quantity-input"
                                               data-id="@item.Id"
                                               value="@item.Quantity" />

                                        <a asp-action="IncreaseQuantity" asp-route-id="@item.Id" class="btn btn-outline-secondary">+</a>
                                    </div>
                                </td>

                                <td class="text-end">
                                    @(((item.Product?.Price ?? 0m) * item.Quantity).ToString("C0", CultureInfo.CreateSpecificCulture("tr-TR")))
                                </td>

                                <td class="text-center">
                                    <a asp-action="RemoveFromCart"
                                       asp-route-id="@item.Id"
                                       class="text-danger fs-5"
                                       title="Remove">
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>

        <div class="col-12 col-lg-3">

            <div class="border rounded p-3 bg-light">
                <h5 class="mb-3">Order Summary</h5>

                <div class="d-flex justify-content-between mb-2">
                    <span>Total Items:</span>
                    <span>@items.Sum(i => i.Quantity)</span>
                </div>

                <div class="d-flex justify-content-between fw-bold h5">
                    <span>Total:</span>
                    <span class="text-success">₺ @items.Sum(p => p.Quantity * p.Product.Price).ToString("N2")</span>
                </div>

                <a asp-action="Payment"
                   class="btn btn-success w-100 mt-3 py-2">
                    Proceed to Payment
                </a>
            </div>

        </div>

    </div>
</div>

@section Scripts {
    <script>
        $(() => {
            $('.quantity-input').on('change', (e) => {
                const qty = $(e.currentTarget).val();
                const id = $(e.currentTarget).data('id');
                window.location = `/Account/SetQuantity/${id}/?Quantity=${qty}`;
            })
        })
    </script>
}
